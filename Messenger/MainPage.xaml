<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Messenger.MainPage">

    <StackLayout Padding="20">
        <Label Text="Чат" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,0"/>
        <ScrollView x:Name="MessagesScrollView" HeightRequest="200">
            <StackLayout x:Name="MessagesStack">
                <!-- Стек сообщений -->
            </StackLayout>
        </ScrollView>
        <Entry x:Name="MessageEntry" Placeholder="Введите сообщение..." Completed="OnMessageEntryCompleted"/>
        <Button Text="Отправить" Clicked="OnSendClicked" CornerRadius="10" BackgroundColor="#7E29C3" Margin="0,10"/>
        <Button Text="Отключиться" Clicked="OnDisconnectClicked" CornerRadius="10" BackgroundColor="#7E29C3" Margin="0,0,0,10"/>
    </StackLayout>
</ContentPage>
